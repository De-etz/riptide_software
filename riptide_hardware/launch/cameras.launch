<launch>
  <arg name="forward_serial_number" value="14490542" />
  <arg name="downward_serial_number" value="14490542" />+

  <group ns="forward">

    <node pkg="nodelet" type="nodelet" name="camera_nodelet_manager" args="manager" />
    <node pkg="nodelet" type="nodelet" name="camera_nodelet"
          args="load pointgrey_camera_driver/PointGreyCameraNodelet camera_nodelet_manager" >
      <param name="frame_id" value="camera_mono" />
      <param name="serial" value="$(arg forward_serial_number)" />
      <param name="camera_info_url"
             value="file://$(find riptide_vision)/camera_info/$(arg mono_serial_number).yaml" />
    </node>

  </group>

  <group ns="downward">

    <node pkg="nodelet" type="nodelet" name="camera_nodelet_manager" args="manager" />
    <node pkg="nodelet" type="nodelet" name="camera_nodelet"
          args="load pointgrey_camera_driver/PointGreyCameraNodelet camera_nodelet_manager" >
      <param name="frame_id" value="camera_mono" />
      <param name="serial" value="$(arg downward_serial_number)" />
      <param name="camera_info_url"
             value="file://$(find riptide_vision)/camera_info/$(arg mono_serial_number).yaml" />
    </node>

  </group>

</launch>
